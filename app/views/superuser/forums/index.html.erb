<%= render 'shared/superuser_tabs' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Forum</th>
      <th>Created</th>
      <th>Posts</th>
    </tr>
  </thead>
  <tbody>
    <% @forums.each do |f| %>
      <tr>
        <td><%= link_to f.name, root_url(:subdomain => f.subdomain) %></td>
        <td><%= time_ago_in_words f.created_at %> ago</td>
        <td><%= f.posts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @forums %>